{
  "compileOnSave": true,
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "es5",
    "module": "es6",
    "allowJs": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "**/node_modules/**/*.*"
  ],
}
